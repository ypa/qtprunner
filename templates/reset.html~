$code:
   x = 0

$for action in actions:
   $code:
      x = x + 1
   $if x % 2:
      <tr><td id="t$action.actionid">$action.action_name</td><td><input type="checkbox" name="to_run" value="$action.actionid"/></td><td>$action.action_loc</td><td>$action.priority</td><td>$action.status</td></tr>
   $else:
      <tr class="odd"><td id="t$action.actionid">$action.action_name</td><td><input type="checkbox" name="to_run" value="$action.actionid"/></td><td>$action.action_loc</td><td>$action.priority</td><td>$action.status</td></tr>
